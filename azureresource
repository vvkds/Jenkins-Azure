pipeline {
    agent any

    stages {
    
        stage('Buid') {
            steps {
                echo 'Authenticating'
                withCredentials([azureServicePrincipal('Azure-lab-sp')]) {
                sh 'az login --service-principal -u $AZURE_CLIENT_ID -p $AZURE_CLIENT_SECRET -t $AZURE_TENANT_ID'
                }
              }
            }
            
      stage('Deploy') {
          job('AzCommand') {
            steps {
                azCommands('Azure-lab-sp', 
                        ['az vm create -n MyLinuxVM -g DevOps-RG ])
                      }
                 }
               }
}

}
